<div class="d-flex justify-content-center mt-2">
    <form class="mt-4 col-8" method="POST" action="/employee/{{users._id}}?_method=PUT">
        <h3 style="text-align: center">CHỈNH SỬA THÔNG TIN NHÂN VIÊN</h3>
        <div class="form-group">
            <label for="mssv">ID Nhân viên</label>
            <input type="text" class="form-control" id="id_nv"  value="{{users.id_nv}}" name="id_nv">
        </div>
        <div class="form-group">
            <label for="name">Họ và tên</label>
            <input type="text" class="form-control" id="name" value="{{users.name}}" name="name">
        </div>
        <div class="form-group">
            <label for="class">Chức vụ</label>
            <input type="text" class="form-control" id="position" value="{{users.position}}" name="position">
        </div>
        <div class="form-group">
            <label for="class">Số điện thoại</label>
            <input type="text" class="form-control" id="phone" value="{{users.phone}}" name="phone">
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
    </form>
</div>