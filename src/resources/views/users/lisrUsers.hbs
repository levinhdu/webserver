<div class="row">
    <div class="mt-4 col ">
        <h3 style="text-align: center">DANH SÁCH NHÂN VIÊN</h3>
        <table class="table mt-4">
            <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">ID Nhân Viên</th>
                    <th scope="col">Họ và tên</th>
                    <th scope="col">Chức vụ</th>
                    <th scope="col">Số điện thoại</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                {{#each users}}
                <tr>
                    <th scope="row">{{sum @index 1}}</th>
                    <td>{{this.id_nv}}</td>
                    <td>{{this.name}}</td>
                    <td>{{this.position}}</td>
                    <td>{{this.phone}}</td>
                    <td>
                        <a href="/employee/{{this._id}}/edit" class="btn btn-link">Sửa</a>
                        <a href="" class="btn btn-link" data-toggle="modal" data-id="{{this._id}}" data-target="#modal-course-delete">Xóa</a>
                    </td>
                </tr>
                {{/each}}
            </tbody>
        </table>
    </div>
</div>

<!-- Modal -->
<div class="modal fade mt-5" id="modal-course-delete" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Delete employee?</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <p>Are you sure to delete the employee?</p>
      </div>
      <div class="modal-footer">
        <button id="btn-delete-course" type="button" class="btn btn-danger">Delete</button>
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
      </div>
    </div>
  </div>
</div>
<form id="delete-course-form" method="POST" >

</form>

<script>
    document.addEventListener('DOMContentLoaded', function(){
      //khi dialog confirm click
      var courseId
      var deleteForm = document.forms['delete-course-form']
      var btnDeleteCourse = document.getElementById('btn-delete-course')

      $('#modal-course-delete').on('show.bs.modal', function (event) {
        var button = $(event.relatedTarget) 
        courseId = button.data('id') 
      })
      
      btnDeleteCourse.onclick = function (){
        deleteForm.action = '/employee/' + courseId + '?_method=DELETE'
        deleteForm.submit()
      }

    })
    
</script>